<%= form_for(@carrera) do |f| %>
  <%= render 'shared/error_messages', :target => @carrera %>

  <table class="form">
    <thead>
      <tr>
        <td colspan="2">Datos de la carrera</td>
      </tr>
    </thead>
    <tfoot>
      <tr> 
        <td colspan="2">
          <div class="actions">
            <%= f.submit %>
          </div> 
        </td>
      </tr>
    </tfoot>
    <tbody>
      <tr>
        <td class="name">
          <%= f.label :clave %>:
        </td>
        <td class="input">
          <%= f.text_field :clave %>
        </td>
      </tr>
      <tr>
        <td class="name">
          <%= f.label :nombre %>:
        </td>
        <td class="input">
          <%= f.text_field :nombre %>
        </td>
      </tr>
      <tr>
        <td class="name">
          <%= f.label :descripcion %>:
        </td>
        <td class="input">
          <%= f.text_field :descripcion %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>

<script type="text/javascript" language="javascript">
  var links = $$('.field input');
  links.each(
      function(element) {
      Event.observe(element, 'keyup', function(){
        element.value = element.value.toUpperCase();
        });
      });
</script>
