<%= form_for(@calendario_entrega) do |f| %>
  <% if @calendario_entrega.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@calendario_entrega.errors.count, "error") %> prohibited this calendario_entrega from being saved:</h2>

      <ul>
      <% @calendario_entrega.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </div>


  <b>Fechas:</b>
  <div class="fechas_entrega" style="padding-left:50px">
    <%= f.fields_for :fechas_entrega do |fe_form| %>
      <%= render 'fecha_entrega_fields', :f => fe_form %>
    <% end %>
    <div style="padding-bottom:20px">
      <%= link_to_create "Agregar fecha de entrega", FechaEntrega.new, f %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script type="text/javascript" language="javascript">
  var links = $$('.field input');
  links.each(
      function(element) {
        Event.observe(element, 'keyup', function(){
          element.value = element.value.toUpperCase();
        });
      }
      );
</script>
