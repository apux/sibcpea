<h1>Lista de laboratorios</h1>

<table class="titled">
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Recursos</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
<% @laboratorios.each do |laboratorio| %>
  <tr>
    <td><%= laboratorio.nombre %></td>
    <td><%= laboratorio.recursos_laboratorio.collect(&:nombre).to_sentence %></td>
    <td><%= link_to 'Mostrar', laboratorio %></td>
    <td><%= link_to 'Editar', edit_laboratorio_path(laboratorio) if can? :update, Laboratorio %></td>
    <td><%= link_to 'Eliminar', laboratorio, :confirm => '¿Está ustd seguro?', :method => :delete if can? :destroy, Laboratorio %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'Nuevo Laboratorio', new_laboratorio_path if can? :create, Laboratorio %>
