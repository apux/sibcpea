<table class="titled">
  <thead>
    <tr>
      <th>Hora</th>
      <% @dias.each do |dia| %>
        <th>
          <%= dia.strftime("%a %d/%m/%Y") %>
        </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% (0..23).to_a.each do |hora| %>
      <tr>
          <td>
            <%= hora < 10 ? "0#{hora}:00" : "#{hora}:00" %>
          </td>
        <% @dias.each do |dia| %>
          <td>
            <% recursos = @calendario[dia][hora] %>
            <% recursos.each do |cr| %>
              <%= cr.recurso_laboratorio.nombre %>
              <%= cr.reservado_para %>
              <br/>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '< Semana anterior', "#{@numero_semana - 1}" %>
<%= link_to 'Semana siguiente >', "#{@numero_semana + 1}"%>
