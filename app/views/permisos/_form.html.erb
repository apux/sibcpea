<%= form_for(@permiso) do |f| %>
  <%= render 'shared/error_messages', :target => @permiso %>

  <table class="form">
    <thead>
      <tr>
        <td colspan="2">Datos del Permiso</td>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <td colspan="2">
          <div class="actions">
            <%= f.submit %>
          </div>
        </td>
      </tr>
    </tfoot>
    <tbody>
      <tr>
        <td class="name">
          <%= f.label :tipo_permiso, 'Tipo de permiso' %>:
        </td>
        <td class="input">
          <%= f.text_field :tipo_permiso %>
        </td>
      </tr>
      <tr>
        <td class="name">
          <%= f.label :descripcion, 'Descripcion' %>:
        </td>
        <td class="input">
          <%= f.text_field :descripcion %>
        </td>
      </tr>
      <tr>
      </tr>
    </tbody>
  </table>

  <script type="text/javascript" language="javascript">
    var links = $$('.field input');
    links.each(
        function(element) {
        Event.observe(element, 'keyup', function(){
          element.value = element.value.toUpperCase();
          });
        }
        );
      </script>
    <% end %>
