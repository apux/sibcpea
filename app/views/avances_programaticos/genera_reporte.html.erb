                <td colspan="1">
                  <%= @avance_programatico.resumen_avance_programatico.porcentaje_proyecto_semestre2 %>
                </td>
                <td colspan="1">
                  <%= @avance_programatico.resumen_avance_programatico.porcentaje_proyecto_semestre3 %>
                </td>
                <td colspan="1">
