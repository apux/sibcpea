        </td>
        <td colspan="6"></td>

      </tr>
      <tr>
        <td colspan="2">SEMESTRE:</td>
        <td colspan="4">
          _<u><%= @avance_programatico.profesor_materia.materia.semestre.nombre %></u>_
        </td>
        <td>FECHA:</td>
