<%= form_for(@generacion) do |f| %>
  <%= render 'shared/error_messages', :target => @generacion, :gender => 'female' %>

  <table class="form">
    <thead>
      <tr>
        <td colspan="2">Datos de la generacion </td>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <td colspan="2">
          <div class="actions">
            <%= f.submit %>
          </td>
        </tr>
        <tr>
        </td>
      </tr>
    </tfoot>
    <tbody>
      <tr>
        <td class="name">
          <%= f.label :clave %>:
        </td>
        <td class="input">
          <%= f.text_field :clave %>
        </td>
      </tr>
      <tr>
        <td class="name">
          <%= f.label :ciclo1_id, 'Ciclo de inicio' %>:
        </td>
        <td class="input">
          <%= f.select :ciclo1_id, Ciclo.all.collect{|c| [c.clave, c.id]} %>
        </td>
      </tr>
      <tr>
        <td class="name">
          <%= f.label :ciclo2_id, 'Ciclo de terminaciÃ³n' %>:
        </td>
        <td class="input">
          <%= f.select :ciclo2_id, Ciclo.all.collect{|c| [c.clave, c.id]} %>
        </td>
      </tr>
      <tr>
        <td class="name">
          <%= f.label :descripcion %>:
        </td>
        <td class="input">
          <%= f.text_field :descripcion %>
        </td>
      </tr>
      <tr>
      </tr>
    </tbody>
  </table>
<% end %>

<script type="text/javascript" language="javascript">
  var links = $$('.field input');
  links.each(
      function(element) {
        Event.observe(element, 'keyup', function(){
          element.value = element.value.toUpperCase();
        });
      }
      );
</script>
