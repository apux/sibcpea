<h1>Lista de avisos</h1>

<table class="titled">
  <tr>
    <th>Aviso</th>
    <th>Usuario</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @avisos.each do |aviso| %>
  <tr>
    <td><%= aviso.aviso %></td>
    <td><%= aviso.usuario.nombre %></td>
    <td><%= link_to 'Mostrar', aviso %></td>
    <td><%= link_to 'Editar', edit_aviso_path(aviso) %></td>
    <td><%= link_to 'Eliminar', aviso, :confirm => '¿Está usted seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Aviso', new_aviso_path %>
