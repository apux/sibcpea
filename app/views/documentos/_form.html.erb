<%= form_for(@documento, :html => { :multipart => true }) do |f| %>
  <%= render 'shared/error_messages', :target => @documento %>

  <table class="form">
    <thead>
      <tr>
        <td colspan="2">
        </td>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <td colspan="2">
          <div class="actions">
            <%= f.submit %>
          </div>
        </td>
      </tr>
    </tfoot>
    <tbody>
      <tr>
        <td class="name">
          <%= f.label :nombre %>:
        </td>
        <td class="input">
          <%= f.text_field :nombre %>
        </td>
      </tr>
      <tr>
        <td class="name">
          <%= f.label :documento %>:
        </td>
        <td class="input">
          <%= f.file_field :documento %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
