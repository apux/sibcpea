    <table style="height: 530px; width: 68.86em;" align="center;" bgcolor="white" border="0px;" bordercolor="black" cellpadding="2px;" cellspacing="0px;">
      <thead>
        <tr>
          <th colspan="3" align="center">
            <%= image_tag 'utm.png', :size => "100x100"%>
