          <td colspan="3">_<u><%= l @fecha_final, :format => "%Y" %></u>_</td>
        </tr>
        <tr>
          <td colspan="14"></td>
        </tr>
        <tr>
          <td colspan="14">
            <table style="height: 430px; width: 68.86em; border: 1px solid black; border-collapse: collapse;" align="center;" cellpadding="2px;" cellspacing="0px;">
              <tbody style="font-size:12pt">
                <tr>
                  <td style="text-align: center; border: 1px solid black;width:150px;"><strong>FECHA</strong></td>
                  <td style="text-align: center; border: 1px solid black; width:150px;"><strong>CODIGO</strong></td>
                  <td colspan="7" style="text-align: center; border: 1px solid black;"><strong>NOMBRE</strong></td>
                  <td colspan="4" style="text-align: center; border: 1px solid black;"><strong>TEMA</strong></td>
                  <td colspan="2" style="text-align: center; border: 1px solid black;"><strong>FIRMA</strong></td>
                </tr>
                <% @asesorias.each do |asesoria| %>
                  <tr>
                    <td style="border: 1px solid black;">
                      <%= asesoria.fecha %>
                    </td>
                    <td style="border: 1px solid black;">
                      <%= asesoria.codigo %>
                    </td>
                    <td colspan="7" style="border: 1px solid black;">
                      <%= asesoria.nombre %>
                    </td>
                    <td colspan="4" style="border: 1px solid black;">
                      <%= asesoria.tema %>
                    </td>
                    <td colspan="2" style="border: 1px solid black;">
                    </td>
                  </tr>
                <% end %>
                <% if @asesorias.size < 12 %>
                  <% (12 - @asesorias.size).times do %>
                    <tr>
                      <td style="border: 1px solid black;">&nbsp;</td>
                      <td style="border: 1px solid black;">&nbsp;</td>
                      <td colspan="7" style="border: 1px solid black;">&nbsp;</td>
                      <td colspan="4" style="border: 1px solid black;">&nbsp;</td>
                      <td colspan="2" style="border: 1px solid black;">&nbsp;</td>
                    </tr>
                  <% end %>
                <% end %>

              </tbody>
            </table>
