<%= form_for(@ciclo) do |f| %>
  <%= render 'shared/error_messages', :target => @ciclo %>

  <table class="form">
    <thead>
      <tr>
        <td colspan="2">Datos del Ciclo</td>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <td colspan="2">
          <div class="actions">
            <%= f.submit %>
          </div>
        </td>
      </tr>
    </tfoot>
    <tbody>
      <tr>
        <td class="name">
          <%= f.label :clave %>:
        </td>
        <td class="input">
          <%= f.text_field :clave %>
        </td>
      </tr>
      <tr>
        <td class="name">
          <%= f.label :tipo %>:
        </td>
        <td class="input">
          <%= f.text_field :tipo %>
        </td>
      </tr>
      <tr>
        <td class="name">
          <%= f.label :fecha_inicio %>:
        </td>
        <td class="input">
          <%= f.date_select :fecha_inicio, :start_year => 2000 %>
        </td>
      </tr>
      <tr>
        <td class="name">
          <%= f.label :fecha_fin %>:
        </td>
        <td class="input">
          <%= f.date_select :fecha_fin, :start_year => 2005 %>
        </td>
      </tr>
      <tr>
        <td class="name">
          <%= f.label :descripcion, 'DescripciÃ³n' %>:
        </td>
        <td class="input">
          <%= f.text_field :descripcion %>
        </td>
      </tr>
      <tr>
      </tr>
    </tbody>
  </table>

<% end %>

<script type="text/javascript" language="javascript">
  var links = $$('.field input');
  links.each(
      function(element) {
        Event.observe(element, 'keyup', function(){
          element.value = element.value.toUpperCase();
        });
      }
      );
</script>
